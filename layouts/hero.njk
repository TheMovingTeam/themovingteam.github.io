---
layout: ./main.njk
isHero: true
---

<div class="heroContainer oh gc" id="hero">
    <div class="vc ac">
        <h1 id="heroLogo">Move</h1>
        <p>The universal public transit app</p>
        <a id="heroCTA" class="accentButton" href="#sign-up">Sign up for the wait-list!</a>
    </div>
    
    {% include "./components/blobs.njk" %}

</div>

<section class="gc" id="features">
    <div class="hc ac reflow jse card">
        <div class="vc ac">
            <div class="hc oh" id="featureContainer">
                {{ content | safe }}
            </div>
            <div id="featureIndicator" class="hc"></div>
        </div>
        <div class="composition frame" id="unifyComposition">
            <div class="logoContainer gc">
                <img class="shape" src="/media/logo.svg" alt="Move transit's logo as seen in the public transit app">
                <img class="arrow" src="/media/logo-arrow.svg" alt="">
            </div>
            <img src="/media/mobile_frame.png" loading="lazy" alt="">
        </div>
    </div>
</section>

<section class="gc" id="supportedProviders">
    <div class="vc">
    <h2>Supported Providers</h2>
    <div class="hc jc" id="providerScroller">
            {% for provider in providers %}
            <img src="/media/providers/{{ provider.id }}.png" alt="{{ provider.name }}" title="{{ provider.name }}" loading="lazy">
            {% endfor %}
            {% for provider in providers %}
            <img src="/media/providers/{{ provider.id }}.png" alt="{{ provider.name }}" title="{{ provider.name }}" loading="lazy">
            {% endfor %}
            {% for provider in providers %}
            <img src="/media/providers/{{ provider.id }}.png" alt="{{ provider.name }}" title="{{ provider.name }}" loading="lazy">
            {% endfor %}
            {% for provider in providers %}
            <img src="/media/providers/{{ provider.id }}.png" alt="{{ provider.name }}" title="{{ provider.name }}" loading="lazy">
            {% endfor %}
        </div>    
    </div>
</section>

<section class="gc" id="articles">
    <h2>Recent articles</h2>
    <div class="hc ac jse reflow" id="articleList">
        {% for article in collections.articles | head(2) %}

        <div class="article card vc">
            <a href="/articles/{{ article.fileSlug | slugify }}">
                <img src="/media/thumbs/{{ article.data.thumbnail }}.png" loading="lazy" alt="{{ article.data.description }}">
                <div class="content">
                    <h3>{{ article.data.title }}</h3>
                    <p>{{ article.data.description }}</p>
                </div>
            </a>
        </div>

        {% endfor %}
        
        <div class="article card vc" id="moreArticles">
            <a href="/articles">
                <img src="/media/logo-arrow.svg" loading="lazy" alt="Move transit app's logo arrow">
                <div class="content">
                    <h3>More articles</h3>
                    <p>Read all other articles here.</p>
                </div>
            </a>
        </div>
    </div>
</section>

